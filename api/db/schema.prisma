model User {
  id          Int           @id @default(autoincrement())
  firstName   String?
  lastName    String?
  createdAt   DateTime      @default(now())
  token       String
  Task        Task[]
  Appointment Appointment[]
  email               String  @unique
  hashedPassword      String
  salt                String
  resetToken          String?
  resetTokenExpiresAt DateTime?
  tokens              String?
}


model Task {
  id        Int      @id @default(autoincrement())
  user_id   Int?
  status_id Int
  title     String?
  details   String?
  urgency   Int
  priority  Int
  date      DateTime
  createdAt DateTime @default(now())
  User      User?    @relation(fields: [user_id], references: [id])
}

model Appointment {
  id        Int      @id @default(autoincrement())
  date      DateTime
  user_id   Int?
  title     String?
  createdAt DateTime @default(now())
  User      User?    @relation(fields: [user_id], references: [id])
}
